<div class="filters-container">
  <!-- Refine by Category -->
  <div class="filter-section">
    <h5 class="filter-heading">Refine by Category</h5>
    <div class="filter-search mb-2">
      <input type="text" class="form-control form-control-sm" placeholder="Search by Category">
    </div>
    <div class="filter-options category-options">
      <!-- Category options will be populated by JS -->
    </div>
  </div>

  <!-- Brand Filter -->
  <div class="filter-section">
    <h5 class="filter-heading">Brand</h5>
    <div class="filter-search mb-2">
      <input type="text" class="form-control form-control-sm" placeholder="Search by Brand">
    </div>
    <div class="filter-options brand-options">
      <!-- Brand options will be populated by JS -->
    </div>
  </div>

  <!-- Price Range Filter -->
  <div class="filter-section">
    <h5 class="filter-heading">Price</h5>
    <div class="price-slider">
      <div class="range-slider">
        <input type="range" class="form-range" id="priceRangeMin" min="0" max="10000" value="0">
        <input type="range" class="form-range" id="priceRangeMax" min="0" max="10000" value="10000">
      </div>
      <div class="price-inputs d-flex flex-column mt-2">
        <div class="input-group input-group-sm mb-2">
          <span class="input-group-text">R</span>
          <input type="number" class="form-control" id="minPrice" placeholder="Min">
        </div>
        <div class="input-group input-group-sm">
          <span class="input-group-text">R</span>
          <input type="number" class="form-control" id="maxPrice" placeholder="Max">
        </div>
      </div>
    </div>
  </div>

  <!-- Rating Filter -->
  <div class="filter-section">
    <h5 class="filter-heading">Rating</h5>
    <div class="filter-options">
      <div class="form-check">
        <input class="form-check-input" type="checkbox" id="rating4">
        <label class="form-check-label" for="rating4">
          <span class="stars">★★★★☆+</span>
        </label>
      </div>
      <div class="form-check">
        <input class="form-check-input" type="checkbox" id="rating3">
        <label class="form-check-label" for="rating3">
          <span class="stars">★★★☆☆+</span>
        </label>
      </div>
      <div class="form-check">
        <input class="form-check-input" type="checkbox" id="rating2">
        <label class="form-check-label" for="rating2">
          <span class="stars">★★☆☆☆+</span>
        </label>
      </div>
      <div class="form-check">
        <input class="form-check-input" type="checkbox" id="rating1">
        <label class="form-check-label" for="rating1">
          <span class="stars">★☆☆☆☆+</span>
        </label>
      </div>
    </div>
  </div>

  <!-- Retailer Filter -->
  <div class="filter-section">
    <h5 class="filter-heading">Retailer</h5>
    <div class="filter-search mb-2">
      <input type="text" class="form-control form-control-sm" placeholder="Search by Retailer">
    </div>
    <div class="filter-options retailer-options">
      <!-- Retailer options will be populated by JS -->
    </div>
  </div>

  <!-- Filter Actions -->
  <div class="filter-actions mt-3">
    <button class="btn btn-primary btn-sm w-100 mb-2">Apply Filters</button>
    <button class="btn btn-outline-secondary btn-sm w-100">Clear All</button>
  </div>
</div>