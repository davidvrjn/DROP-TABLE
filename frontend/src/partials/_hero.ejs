<div class="hero-section position-relative">
  <div class="container text-center">
    <% if (typeof currentPage !== 'undefined' && currentPage === 'deals') { %>
      <div class="deals-badge">HOT DEALS</div>
    <% } %>
    <h1 class="hero-title">Never Miss the Best Price For Your Favourite Products</h1>
    <p class="hero-subtitle">Browse the lowest prices across retailers</p>
    <div class="search-container mt-4">
      <div class="input-group">
        <input type="text" class="form-control search-input" placeholder="Search for products...">
        <button class="btn search-btn" type="button">
          <i class="bi bi-search"></i>
        </button>
      </div>
    </div>
  </div>
</div>