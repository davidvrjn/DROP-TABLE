<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<div class="product-reviews-section card">
    <div class="card-body">
        <h3 class="card-title">Customer Reviews</h3>
        
        <div class="reviews-summary mb-3">
            <div class="overall-rating">
                <span class="rating-value" id="overall-rating-value">0.0</span>
                <div class="rating-stars">
                    <i class="bi bi-star-fill"></i>
                    <i class="bi bi-star-fill"></i>
                    <i class="bi bi-star-fill"></i>
                    <i class="bi bi-star-fill"></i>
                    <i class="bi bi-star-fill"></i>
                </div>
                <span class="rating-count" id="overall-rating-count">(0 reviews)</span>
            </div>
            <button class="btn btn-outline-primary leave-review-btn">
                <i class="bi bi-pencil"></i> Leave a Review
            </button>
        </div>
        
        <div class="reviews-container" id="reviews-container">
            <!-- Reviews will be loaded dynamically -->
            <div class="no-reviews-message" id="no-reviews-message">
                No user reviews for now
            </div>
        </div>
    </div>
</div>

<!-- Review Modal -->
<div class="modal fade" id="reviewModal" tabindex="-1" aria-labelledby="reviewModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="reviewModalLabel">Write a Review</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="reviewForm">
                    <div class="mb-3">
                        <label class="form-label">Rating</label>
                        <div class="star-rating-select">
                            <i class="bi bi-star rating-star" data-rating="1"></i>
                            <i class="bi bi-star rating-star" data-rating="2"></i>
                            <i class="bi bi-star rating-star" data-rating="3"></i>
                            <i class="bi bi-star rating-star" data-rating="4"></i>
                            <i class="bi bi-star rating-star" data-rating="5"></i>
                            <input type="hidden" id="ratingValue" value="0">
                        </div>
                        <small class="text-muted">Click a star to rate, or leave unselected for 0 stars</small>
                    </div>
                    <div class="mb-3">
                        <label for="reviewText" class="form-label">Your Review</label>
                        <textarea class="form-control" id="reviewText" rows="4" required></textarea>
                    </div>
                    <div id="reviewSubmitSuccess" class="alert alert-success d-none">
                        Thank you for your review! It has been submitted successfully.
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" id ="cancelReviewBtn" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="submitReviewBtn">Submit Review</button>
            </div>
        </div>
    </div>
</div>

        <div class="text-center mt-4">
            <button id="load-more-reviews" class="btn btn-primary">Load More Reviews</button>
        </div>
    </div>
</div>