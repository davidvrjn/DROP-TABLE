<!DOCTYPE html>
<html lang="en" data-bs-theme="light">
<head>
    <%- include('./partials/_head.ejs') %>
</head>
<body>
    <!-- # HEADER SEGMENT # -->
    <%- include('./partials/_header.ejs', { currentPage: 'products' }) %>
     
    <div class="container mt-4">
        <h1>Product Listing</h1>
        
        <div class="row mt-4">
            <!-- Filter Sidebar - Hidden on mobile, visible on md screens and up -->
            <div class="col-md-3 col-lg-2 d-none d-md-block">
                <%- include('./partials/_filters.ejs') %>
            </div>
            
            <!-- Product Listing -->
            <div class="col-12 col-md-9 col-lg-10">
                <!-- Mobile Filter Toggle - Only visible on small screens -->
                <div class="d-md-none mb-3">
                    <button class="btn btn-outline-primary w-100" type="button" data-bs-toggle="offcanvas" data-bs-target="#filtersOffcanvas">
                        <i class="bi bi-funnel"></i> Show Filters
                    </button>
                </div>
                
                <!-- Product Grid -->
                <div id="product-list" class="row">
                    <div class="col-12 text-center">
                        <div class="spinner-border" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Offcanvas Filter Menu for Mobile -->
    <div class="offcanvas offcanvas-start" tabindex="-1" id="filtersOffcanvas" aria-labelledby="filtersOffcanvasLabel">
        <div class="offcanvas-header">
            <h5 class="offcanvas-title" id="filtersOffcanvasLabel">Filters</h5>
            <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body">
            <!-- The filters will be included here for mobile view -->
            <%- include('./partials/_filters.ejs') %>
        </div>
    </div>

    <!-- # FOOTER SEGMENT # -->
    <%- include('partials/_footer.ejs') %>

    <script type="module" src="./js/static_product_test.js"></script>
</body>
</html>